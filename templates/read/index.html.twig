{% extends 'base.html.twig' %}

{% block title %}Forum Index{% endblock %}

{% block body %}
<div id="wrapper-main">
    {% if is_granted('ROLE_ADMIN') %}
        <a class="uk-button uk-button-default" href="{{ path('categorie_add') }}">Nouveau</a>
    {% endif %}

    <table>
        <thead>
            <th>Nom de l'utilisateur</th>
            <th>E-mail</th>
        </thead>
        <tbody>
        {% for utilisateur in users %}
            <tr>
                <td>{{ utilisateur.pseudo }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>{{ utilisateur.pseudo }}</td>
                <td>{{ utilisateur.pseudo }}</td>
                <td>{{ utilisateur.pseudo }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}

{% block javascripts %}
    {{ parent () }}
    <script src="https://kit.fontawesome.com/6277cc7eb0.js"></script>
{% endblock %}